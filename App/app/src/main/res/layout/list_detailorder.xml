<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="175dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tvNamaLaundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Laundry"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tvJenisCucianDetail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Kering"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tvJenisCucianDetail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Setrika"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/tvJenisCucianDetail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Basah"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/tvJenisCucianDetail4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setrika"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="110dp"/>

        <TextView
            android:id="@+id/tvberatCucian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tvberatCucian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/tvberatCucian3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/tvberatCucian4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="110dp"/>



        <TextView
            android:id="@+id/tvhargaCucian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Harga"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="140dp"/>



        <ImageButton
            android:id="@+id/btnHapusOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp"/>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>